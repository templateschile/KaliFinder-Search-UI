{
  "name": "kalifinder-search-ui",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@10.24.0",
  "scripts": {
    "dev": "concurrently -k -n build,preview -c blue,green \"pnpm dev:embed\" \"pnpm dev:preview\"",
    "dev:embed": "vite build --mode development --watch",
    "dev:preview": "wait-on dist/kalifind-search.js && vite preview --host --port 8080 --strictPort",
    "dev:test": "pnpm build:dev && pnpm dlx serve . -l 8080",
    "build": "pnpm run clean && tsc -b && vite build --mode production",
    "build:esm": "pnpm run clean && tsc -b && BUILD_TARGET=esm vite build --mode production",
    "build:dev": "tsc -b && vite build --mode development",
    "build:analyze": "pnpm run build && pnpm dlx vite-bundle-analyzer",
    "preview": "vite preview",
    "clean": "rimraf dist && rimraf --glob \"*.tsbuildinfo\"",
    "type-check": "tsc -b --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check:all": "pnpm run type-check && pnpm run format:check && pnpm run lint",
    "check:strict": "pnpm run type-check && pnpm run format && pnpm run lint && pnpm run build",
    "cleanup": "rimraf node_modules pnpm-lock.yaml .vite .vite-cache .eslintcache node_modules/.tmp && pnpm i",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "i18next": "^25.8.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.552.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.66.1",
    "react-i18next": "^16.5.4",
    "react-router-dom": "^7.9.6",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lovable-tagger": "^1.1.11",
    "postcss": "^8.5.6",
    "prettier": "^3.7.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "rimraf": "^6.1.2",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.2.4",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "wait-on": "^9.0.3"
  }
}
